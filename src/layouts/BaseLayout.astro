---
import { ClientRouter } from "astro:transitions";
import NavBar from "../components/NavBar.astro";

interface Props{
	title?: string;
}

const { title = "Rincón de Duendes" } = Astro.props;

---

<html lang="en" data-theme="light">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
        <div class="min-h-screen flex flex-col h-screen overflow-y-hidden bg-gradient-to-r from-white  via-gray-200 to-white ">

            <NavBar  />

            <div class="flex-1 flex flex-row overflow-y-hidden ">
				<main class="flex-1 overflow-y-auto">
					<slot />
				</main>
    		</div>


			<footer class="w-full justify-center items-center bottom-0 text-center ">
				<div class="flex justify-center gap-1 pb-2 md:pb-4 pt-0 md:pt-4">
					<span class="text-default-600">Powered by</span>
					<p class="text-blue-500">Rincón de Duendes</p>
				</div>

			</footer>


        </div>
        
	</body>
</html>