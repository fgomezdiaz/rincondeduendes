---
import { ClientRouter } from "astro:transitions";
import NavBar from "../components/NavBar.astro";


const description = "Explora una amplia variedad de juguetes educativos y libros infantiles en nuestra juguetería y librería. Encuentra los mejores recursos para el aprendizaje y diversión de los niños.";
const keywords = "juguetería, librería infantil, juguetes educativos, cuentos para niños, libros para niños, juguetes de madera";

interface Props{
	title?: string;
}

const { title ="Rincón de Duendes" } = Astro.props;

---



<html lang="en" data-theme="light">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
        <div class="min-h-screen flex flex-col h-screen overflow-y-hidden bg-gradient-to-r from-white  via-gray-200 to-white ">
			<NavBar  />

         	<slot />
			<!-- <main class="overflow-y-auto">
			</main> -->
            <!-- <div class="flex flex-row overflow-y-hidden ">
    		</div> -->

	
			<footer class="w-full justify-center items-center bottom-0 text-center ">
				
				<div class="flex justify-center gap-1 pb-2 md:pb-4 pt-0 md:pt-4 ">
					<span class="text-default-600">Powered by</span>
					<p class="text-blue-500">Rincón de Duendes</p>
				</div>

			</footer>


        </div>
        
	</body>
</html>

